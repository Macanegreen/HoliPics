@model HoliPics.Models.Image

@{
    ViewData["Title"] = "DeleteImage";
}

<h1>Delete Image</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.FileName</h4>
    <hr />
    <form asp-action="Delete-Image">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.AlbumId">Back to List </a>
    </form>
</div>