@model HoliPics.Models.Album
@inject IWebHostEnvironment webhost


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4" id="img-container">
    @{
        int i = 0;
        @foreach (var item in Model.Images)
        {
            string imgName = $"Medium_{item}";
            if (i < 7)
            {
                <div class="col">
                    <a asp-action="Picture" asp-route-id="@item">
                        <img src="~/images/@imgName" class="w-100 shadow-1-strong rounded mb-1" asp-append-version="true" />
                    </a>
                </div>
            }
            else
            {
                <div class="col">
                    <a asp-action="Picture" asp-route-id="@item">
                        <img src="/images/@imgName" class="w-100 shadow-1-strong rounded mb-1" loading="lazy" asp-append-version="true" />
                    </a>
                </div>
            }
            i++;
        }
    } 
</div>





