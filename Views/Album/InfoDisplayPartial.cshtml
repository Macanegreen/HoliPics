@model HoliPics.Models.Album

<div class="row row-cols-3 row-cols-sm-4 row-cols-md-5 row-cols-lg-6 g-4">
    @foreach (var item in Model.Images)
    {
        string imgName = $"Small_{item}";
        <div class="col">
            <a asp-action="Picture" asp-route-id="@item">
                <img src="/album/GetImage?filename=@imgName" class="w-100 shadow-1-strong rounded mb-1" loading="lazy" asp-append-version="true" />
            </a>
        </div>

    }
</div>

