@using HoliPics.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<HoliPicsUser> SignInManager
@inject UserManager<HoliPicsUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {    
        var name = (await UserManager.GetUserAsync(User)).Name;
        string? nameToShow = "";
        if (name != null)
        {
                nameToShow = name;    
        }
        else
        {
            nameToShow = User.Identity?.Name;
        }
            <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @nameToShow!</a>
        </li>
        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
